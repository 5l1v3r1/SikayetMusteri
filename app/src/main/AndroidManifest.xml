<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.galatasaray.firebasedeneme">

    <application
        android:name="android.support.multidex.MultiDexApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="Şikayet Bildirim Sistemi"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Sikayet" />
        <activity android:name=".SikayetRecView" />
        <activity
            android:name=".SikayetRec"
            android:label="Şikayetlerim"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".YeniSikayet"
            android:label="Yeni Şikayet"
            android:theme="@style/AppTheme"></activity>
    </application>

</manifest>